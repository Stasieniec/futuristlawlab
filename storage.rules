rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Submissions folder - allow uploads for hackathon project submissions
    match /submissions/{teamId}/{allPaths=**} {
      // Anyone can read (for viewing submissions)
      allow read: if true;
      // Anyone can write (upload files)
      allow write: if request.resource.size < 100 * 1024 * 1024; // Max 100MB per file
    }
  }
}
